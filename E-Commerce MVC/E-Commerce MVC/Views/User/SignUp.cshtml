@model E_Commerce_MVC.ViewModels.RegisterVM
@{
    ViewData["Title"] = "SignUp";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Sign Up</h1>
        <form asp-action="SignUp" enctype="multipart/form-data">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.UserID" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.UserID" type="text" class="form-control">
                            <span asp-validation-for="@Model.UserID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" type="text" class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.FullName"></label><sup>*</sup>
                        <input asp-for="@Model.FullName" class="form-control">
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-check my-3">
                        <input asp-for="@Model.Gender" class="form-check-input">
                        <label class="form-check-label" for="Gender">Male?</label>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.BirthDate"></label>
                        <input asp-for="@Model.BirthDate" class="form-control">
                        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
                        <input asp-for="@Model.Address" class="form-control">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Phone"></label><sup>*</sup>
                        <input asp-for="@Model.Phone" class="form-control">
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input asp-for="@Model.Email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" for="Image">Image<sup>*</sup></label>
                        <input type="file" name="Image" class="form-control">
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>

