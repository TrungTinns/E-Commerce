@model IEnumerable<E_Commerce_MVC.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_ProductList.cshtml";
}

<h1>Search</h1>
<h3><b>@Model.Count()</b> matching products</h3>
@foreach (var item in Model)
{
    <div class="col-md-6 col-lg-6 col-xl-4">
        <div class="rounded position-relative fruite-item">
            <div class="fruite-img">
                <img src="~/Hinh/HangHoa/@item.Image" class="img-fluid w-100 rounded-top" alt="@item.ProductName">
            </div>
            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.ProductType</div>
            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                <h4>@item.ProductName</h4>
                <p>@item.Description</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">$@item.Price</p>
                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                </div>
            </div>
        </div>
    </div>

}