@model IEnumerable<E_Commerce_MVC.ViewModels.ProductVM>

<h3><b>@Model.Count()</b> products</h3>
<!-- Products-->
@foreach (var item in Model)
{
    <div class="col-12 col-sm-6 col-lg-4">
        <!-- Card Product-->
        <div class="card border border-transparent position-relative overflow-hidden h-100 transparent">
            <div class="card-img position-relative">
                <div class="card-badges">
                    <span class="badge badge-card"><span class="f-w-2 f-h-2 d-block me-1"></span>@item.ProductType</span>
                </div>
                <span class="position-absolute top-0 end-0 p-2 z-index-20 text-muted"><i class="ri-heart-line"></i></span>
                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId">
                    <picture class="position-relative overflow-hidden d-block bg-light">
                        <img class="w-100 img-fluid position-relative z-index-10" title="" src="~/assets/Hinh//HangHoa/@item.Image" alt="@item.ProductName" style="height: 300px; object-fit: cover;">
                    </picture>
                </a>
                <div class="position-absolute start-0 bottom-0 end-0 z-index-20 p-2">
                    <button asp-action="AddtoCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="btn btn-quick-add"><i class="ri-add-line me-2"></i> Quick Add</button>
                </div>
            </div>
            <div class="card-body px-0">
                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId" class="text-decoration-none fs-5 fw-bold link-cover">@item.ProductName</a>
                <small class="text-muted d-block">@item.Description</small>
                <p class="text-dark fs-5 fw-bold mb-0">$@item.Price</p>
            </div>
        </div>
        <!--/ Card Product-->
    </div>
}
<!-- / Products-->
